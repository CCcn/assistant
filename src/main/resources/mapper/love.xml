    <update id="update" parameterType="com.cdtc.student.assistant.model.LoveEO">
        update
        <include refid="BASE_TABLE"/>
        set
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                user_id,
            </if>
            <if test="title != null" >
                title,
            </if>
            <if test="like != null" >
                like,
            </if>
            <if test="content != null" >
                content,
            </if>
            <if test="comment != null" >
                comment,
            </if>
            <if test="status != null" >
                status,
            </if>
