<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cdtc.student.assistant.dao.BannerDao" >
    <sql id="BASE_TABLE">
    bannerEO
    </sql>

    <sql id="BASE_COLUMN">
    id,url,tip,img,status
  </sql>
    <resultMap id="Banner" type="com.cdtc.student.assistant.model.BannerEO">
        <result property="id" column="ID"/>
        <result property="url" column="url"/>
        <result property="tip" column="tip"/>
        <result property="img" column="img"/>
        <result property="status" column="status"/>
    </resultMap>
    <insert id="insert" parameterType="com.cdtc.student.assistant.model.BannerEO">
        insert into
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="url != null" >
                url,
            </if>
            <if test="tip != null" >
                tip,
            </if>
            <if test="img != null" >
                img,
            </if>
            <if test="status != null" >
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="url != null" >
                #{url,jdbcType=VARCHAR},
            </if>
            <if test="tip != null" >
                #{tip,jdbcType=VARCHAR},
            </if>
            <if test="img != null" >
                #{img,jdbcType=VARCHAR},
            </if>
            <if test="status != null" >
                #{status,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <select id="selectAll" resultMap="Banner">
      select * from
      <include refid="BASE_TABLE"/>
      where status = 0
    </select>
</mapper>